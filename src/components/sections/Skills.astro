---
import Section from "@/components/Section.astro"
import { skills } from "@cv"
---

<Section title="Skills">
  <ul class="flex items-center flex-wrap gap-2">
    {
      skills.map(({ name }) => (
        <li class="shrink-0  px-2 w-fit bg-gray-100 border border-gray-300 rounded-md text-gray-600 text-base cursor-default hover:bg-gray-200 transition-colors dark:bg-gray-700 dark:border-gray-500 dark:text-gray-300 dark:hover:bg-gray-500 dark:print:text-gray-600 dark:print:border-gray-300">
          {name}
        </li>
      ))
    }
  </ul>
</Section>
