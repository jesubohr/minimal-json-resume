---
import Section from "@/components/Section.astro"
import { skills } from "@cv"
---

<Section title="Skills">
  <ul class="flex items-center flex-wrap gap-2 print:text-sm">
    {
      skills.map(({ name }) => (
        <li class="shrink-0 py-0.5 px-2 w-fit bg-gray-100 border border-gray-300 rounded-md text-gray-600 font-medium cursor-default hover:bg-gray-200 transition-colors">
          {name}
        </li>
      ))
    }
  </ul>
</Section>
