---
import Section from "@/components/Section.astro"
import { skills } from "@cv"
---

<Section title="Skills">
  <ul class="flex items-center flex-wrap gap-2">
    {
      skills.map(({ name }) => (
        <li class="shrink-0 py-0.5 px-2 w-fit bg-gray-600 rounded-md text-white text-sm font-medium cursor-default hover:bg-gray-500 transition-colors">
          {name}
        </li>
      ))
    }
  </ul>
</Section>
